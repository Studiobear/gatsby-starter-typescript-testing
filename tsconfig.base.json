{
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "paths": {
      "@studiobear/*": ["packages/*/src"],
      "*": ["node_modules", "packages"]
    }
  },
  "include": ["packages", "jest-dom/extend-expect"]
}
