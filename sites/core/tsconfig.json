{
  "extends": "../../tsconfig.base.json",
  "exclude": [
    "./node_modules",
    "./public",
    "./.cache",
    "**/__tests__",
    "**/__mocks__",
    "./gatsby-config.ts",
    "./gatsby-node.ts",
    "./gatsby-browser.ts",
    "./gatsby-ssr.ts"
  ],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "resolveJsonModule": true,
    "target": "esnext",
    "jsx": "react",
    "declaration": true,
    "rootDir": "src",
    "baseUrl": ".",
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "composite": false
  }
}
