{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "loglevel": "success",
  "registry": "https://registry.npmjs.org/",
  "ignoreChanges": ["CHANGELOG.md", "**/__tests__/**", "**/__mocks__/**", "**/__testfixtures__/**"],
  "stream": true,
  "command": {
    "publish": {
      "allowBranch": "develop",
      "bump": "patch",
      "conventionalCommits": true,
      "message": "chore(release): Publish",
      "registry": "https://registry.npmjs.org/"
    }
  },
  "changelog": {
    "labels": {
      "breaking": ":boom: Breaking Change",
      "bug": ":bug: Bug Fix",
      "feat": ":rocket: New Feature"
    },
    "cacheDir": ".changelog"
  }
}
