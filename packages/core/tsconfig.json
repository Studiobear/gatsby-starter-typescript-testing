{
  "extends": "../../tsconfig.base.json",
  "exclude": ["**/__tests__", "**/__mocks__"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "jsx": "react",
    "declaration": true,
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": ["src/types"],
    "composite": true,
    "noEmit": true,
    "types": ["node"]
  },
  "references": [{ "path": "../shared-ui-ionic" }, { "path": "../gatsby-theme-blog" }]
}
