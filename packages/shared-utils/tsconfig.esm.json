{
  "extends": "../../tsconfig.base.json",
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*", "**/*.story.*"],
  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "composite": true,
    "outDir": "dist-esm",
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": ["src/types"],
    "types": ["node", "react-helmet"],
    "tsBuildInfoFile": "./buildcache"
  }
}
