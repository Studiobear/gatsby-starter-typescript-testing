{
  "extends": "../../tsconfig.base.json",
  "exclude": ["**/__tests__", "**/__mocks__"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "src",
    "target": "esnext",
    "module": "commonjs",
    "composite": true,
    "noEmit": true,
    "lib": ["dom", "es2015", "es2017"],
    "moduleResolution": "node",
    "typeRoots": ["src/types", "../../../node_modules/@types"]
  },
  "references": [{ "path": "../shared-ui-ionic" }, { "path": "../core" }]
}
